{
	// Extend existing configuration
	// from ESlint and eslint-plugin-react defaults.
	"extends": [ "eslint:recommended", "plugin:react/recommended" ],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
	},
	"env": {
	  "es6": true,
		"browser": true,
		"node": false,
		"mocha": true
	},
	// Enable custom plugin known as eslint-plugin-react
	"plugins": [
		"react","async-await","mocha"
	],
	"rules": {
		"space-infix-ops": ["error"],
		"require-await": "error",
		"no-return-await": "error",
		// Disable `no-console` rule
		// Give a warning if identifiers contain underscores
		"async-await/space-after-async": 2,
		"async-await/space-after-await": 2,
		"indent": [ "warn", 2, {"SwitchCase": 1, "MemberExpression": "off"} ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"no-console": [ "warn" ],
		"no-unused-vars": [ "warn" ],
		"comma-spacing": [ "warn", { "before": false, "after": true } ],
		"key-spacing": [ "warn", { } ],
		"consistent-return": "error",
		"object-curly-spacing": ["error", "always"],
		"no-underscore-dangle": ["off"]
	//	"no-underscore-dangle": ["error", {"allow": ["_id","_server"]}]
	},
	"globals": {
		"module": true,
    "nocker": true,
    "nock": true,
    "vault": true,
    "delay": true,
    "vaultObservable": true,
    "storeFactory": true,
    "rootEpic": true,
    "assert": true,
    "initVault": true,
		"expect": true
	}
}
